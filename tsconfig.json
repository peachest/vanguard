{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDirs": [
      "src",
    ],
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "newLine": "lf",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "isolatedModules": true
  }
}
